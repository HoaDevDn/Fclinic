<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_edTenTaiKhoanDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.framgia.capstone.widge.ClearEditText
            android:id="@+id/edTenTaiKhoanDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/myAlphaNumeric"
            android:hint="Tên Tài Khoản"
            android:inputType="textFilter"
            android:maxLength="10"
            android:textColor="@color/colorGray"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_edDiaChiEmailDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.framgia.capstone.widge.ClearEditText
            android:id="@+id/edDiaChiEmailDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ email"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:textColor="@color/colorGray"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_edMatKhauDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.framgia.capstone.widge.PasswordEditText
            android:id="@+id/edMatKhauDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:maxLength="10"
            android:textColor="@color/colorGray"
            app:useStrike="true"
            app:useValidate="true"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mật khẩu ít nhất phải 3 kí tự"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_edNhapLaiMatKhauDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.framgia.capstone.widge.PasswordEditText
            android:id="@+id/edNhapLaiMatKhauDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:maxLength="10"
            android:textColor="@color/colorGray"
            app:useStrike="true"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnDangKy"
        style="@style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Đăng Ký"
        android:textColor="@color/color_white"/>

</LinearLayout>

