<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="itemview"
            type="com.framgia.capstone.data.model.PhongKham"
            />
    </data>

    <android.support.v7.widget.CardView
        xmlns:car_view="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:elevation="1dp"
        car_view:cardCornerRadius="5dp"
        car_view:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/hinhAnh"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{itemview.hinhAnh}"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/tenThuoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="@{itemview.tenPhongKham}"
                    android:textColor="#004d4d"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/moTa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@{itemview.diaChi}"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@{itemview.SDT}"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
